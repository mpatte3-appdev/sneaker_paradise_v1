<div class="page-header">
  <h1>
    Designers
    <a href="/designers/new" class="btn btn-lg btn-success">New Designer</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "designers_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :designer_name_cont, "Designer name contains" %>
    <%= f.text_field :designer_name_cont, :class => "form-control", :placeholder => "Designer name contains" %>
  </div>

<div class="form-group">
  <%= f.label :designer_id, "Designer" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :designer_id_gteq, :class => "form-control", :placeholder => "Designer greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :designer_id_lteq, :class => "form-control", :placeholder => "Designer less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :initial_release_date, "SneakerModel Initial release date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='sneakergteqinitial_release_datePicker'>
                  <%= f.text_field :sneaker_initial_release_date_gteq, :class => "form-control", :placeholder => "SneakerModel Initial release date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='sneakerlteqinitial_release_datePicker'>
                  <%= f.text_field :sneaker_initial_release_date_lteq, :class => "form-control", :placeholder => "SneakerModel Initial release date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#sneakergteqinitial_release_datePicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#sneakerlteqinitial_release_datePicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#sneakergteqinitial_release_datePicker').on("dp.change", function (e) {
                  $('#sneakerlteqinitial_release_datePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#sneakerlteqinitial_release_datePicker').on("dp.change", function (e) {
                  $('#sneakergteqinitial_release_datePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :sneaker_id, "Brand Sneaker" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :brand_name_sneaker_id_gteq, :class => "form-control", :placeholder => "Brand Sneaker greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :brand_name_sneaker_id_lteq, :class => "form-control", :placeholder => "Brand Sneaker less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/designers" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#designers_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Designer name</th>
        <th>Sneaker</th>
        <th>Designer</th>
        <th>Actions</th>
      </tr>

      <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.designer_name %></td>
        <td>
          <% if designer.sneaker.present? %>
            <a href="/sneaker_models/<%= designer.sneaker.id %>">
              <%= designer.sneaker.initial_release_date %>
            </a>
          <% end %>
        </td>
        <td><%= designer.designer_id %></td>
        <td>
          <a href="/designers/<%= designer.id %>" class="btn btn-primary">Show</a>
          <a href="/designers/<%= designer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_designer/<%= designer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @designers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
