<div class="page-header">
  <h1>
    Brands
    <a href="/brands/new" class="btn btn-lg btn-success">New Brand</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "brands_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :sneaker_id, "Sneaker" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :sneaker_id_gteq, :class => "form-control", :placeholder => "Sneaker greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :sneaker_id_lteq, :class => "form-control", :placeholder => "Sneaker less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :brand_id, "Brand" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :brand_id_gteq, :class => "form-control", :placeholder => "Brand greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :brand_id_lteq, :class => "form-control", :placeholder => "Brand less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :initial_release_date, "SneakerModel Initial release date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='sneaker_modelsgteqinitial_release_datePicker'>
                  <%= f.text_field :sneaker_models_initial_release_date_gteq, :class => "form-control", :placeholder => "SneakerModel Initial release date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='sneaker_modelslteqinitial_release_datePicker'>
                  <%= f.text_field :sneaker_models_initial_release_date_lteq, :class => "form-control", :placeholder => "SneakerModel Initial release date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#sneaker_modelsgteqinitial_release_datePicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#sneaker_modelslteqinitial_release_datePicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#sneaker_modelsgteqinitial_release_datePicker').on("dp.change", function (e) {
                  $('#sneaker_modelslteqinitial_release_datePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#sneaker_modelslteqinitial_release_datePicker').on("dp.change", function (e) {
                  $('#sneaker_modelsgteqinitial_release_datePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :designers_designer_name_cont, "Designer designer_name contains" %>
      <%= f.text_field :designers_designer_name_cont, :class => "form-control", :placeholder => "Designer designer_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/brands" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#brands_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sneaker</th>
        <th>Brand</th>
        <th>Actions</th>
      </tr>

      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.sneaker_id %></td>
        <td><%= brand.brand_id %></td>
        <td>
          <a href="/brands/<%= brand.id %>" class="btn btn-primary">Show</a>
          <a href="/brands/<%= brand.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_brand/<%= brand.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @brands, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
