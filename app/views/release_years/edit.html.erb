<!-- Validation failure messages -->
<% if @release_year.errors.any? %>
  <% @release_year.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Release Year #<%= @release_year.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_release_year/<%= @release_year.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for sneaker_id -->
      <div class="form-group">
        <label for="sneaker_id" class="control-label">
          Sneaker
        </label>

        <input type="text" id="sneaker_id" name="sneaker_id" placeholder="Sneaker" class="form-control" value="<%= @release_year.sneaker_id %>">
      </div>

      <button class="btn btn-warning">
        Update Release Year
      </button>
      or
      <a href="/release_years/<%= @release_year.id %>">Cancel</a>
    </form>
  </div>
</div>
