<div class="page-header">
  <h1>
    Sneaker models
    <a href="/sneaker_models/new" class="btn btn-lg btn-success">New Sneaker model</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "sneaker_models_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :initial_release_date, "Initial release date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='initial_release_dategteqPicker'>
                  <%= f.text_field :initial_release_date_gteq, :class => "form-control", :placeholder => "Initial release date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='initial_release_datelteqPicker'>
                  <%= f.text_field :initial_release_date_lteq, :class => "form-control", :placeholder => "Initial release date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#initial_release_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#initial_release_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#initial_release_dategteqPicker').on("dp.change", function (e) {
                  $('#initial_release_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#initial_release_datelteqPicker').on("dp.change", function (e) {
                  $('#initial_release_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
  <%= f.label :designer_id, "Designer" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :designer_id_gteq, :class => "form-control", :placeholder => "Designer greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :designer_id_lteq, :class => "form-control", :placeholder => "Designer less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :sneaker_id_cont, "Sneaker contains" %>
    <%= f.text_field :sneaker_id_cont, :class => "form-control", :placeholder => "Sneaker contains" %>
  </div>

<div class="form-group">
    <%= f.label :lead_designer_cont, "Lead designer contains" %>
    <%= f.text_field :lead_designer_cont, :class => "form-control", :placeholder => "Lead designer contains" %>
  </div>

<div class="form-group">
  <%= f.label :brand, "Brand" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :brand_gteq, :class => "form-control", :placeholder => "Brand greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :brand_lteq, :class => "form-control", :placeholder => "Brand less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :colorway_name_cont, "Colorway name contains" %>
    <%= f.text_field :colorway_name_cont, :class => "form-control", :placeholder => "Colorway name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :designer_designer_name_cont, "Designer designer_name contains" %>
      <%= f.text_field :designer_designer_name_cont, :class => "form-control", :placeholder => "Designer designer_name contains" %>
    </div>

<div class="form-group">
  <%= f.label :sneaker_id, "ReleaseYear Sneaker" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :initial_release_year_sneaker_id_gteq, :class => "form-control", :placeholder => "ReleaseYear Sneaker greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :initial_release_year_sneaker_id_lteq, :class => "form-control", :placeholder => "ReleaseYear Sneaker less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :sneaker_id, "Brand Sneaker" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :brand_name_sneaker_id_gteq, :class => "form-control", :placeholder => "Brand Sneaker greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :brand_name_sneaker_id_lteq, :class => "form-control", :placeholder => "Brand Sneaker less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/sneaker_models" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#sneaker_models_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Initial release date</th>
        <th>Release year</th>
        <th>Colorway name</th>
        <th>Brand</th>
        <th>Lead designer</th>
        <th>Sneaker image</th>
        <th>Sneaker</th>
        <th>Designer</th>
        <th>Brands</th>
        <th>Actions</th>
      </tr>

      <% @sneaker_models.each do |sneaker_model| %>
      <tr>
        <td><%= sneaker_model.initial_release_date %></td>
        <td>
          <% if sneaker_model.initial_release_year.present? %>
            <a href="/release_years/<%= sneaker_model.initial_release_year.id %>">
              <%= sneaker_model.initial_release_year.sneaker_id %>
            </a>
          <% end %>
        </td>
        <td><%= sneaker_model.colorway_name %></td>
        <td><%= sneaker_model.brand %></td>
        <td><%= sneaker_model.lead_designer %></td>
        <td><img src='<%= sneaker_model.sneaker_image %>' class='img-responsive'></td>
        <td><%= sneaker_model.sneaker_id %></td>
        <td><%= sneaker_model.designer_id %></td>
        <td>
          <% if sneaker_model.brand_name.present? %>
            <a href="/brands/<%= sneaker_model.brand_name.id %>">
              <%= sneaker_model.brand_name.sneaker_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/sneaker_models/<%= sneaker_model.id %>" class="btn btn-primary">Show</a>
          <a href="/sneaker_models/<%= sneaker_model.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_sneaker_model/<%= sneaker_model.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @sneaker_models, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
